<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evrybit.martin.evrybit.Add_a_bit"
    android:clickable="false"
    android:background="@drawable/add_bit_bg_overlay3x">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/bottomfade"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/btm_fade_story_cover_img3x"
        android:layout_marginTop="106dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/topfade"
        android:layout_alignStart="@+id/topfade"
        android:contentDescription="@string/add_bitbottom_fade" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topfade"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/top_fade_camera_viewport3x"
        android:layout_below="@+id/bottomfade"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/add_bit_topfade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/add_bit_to_this_story"
        android:adjustViewBounds="true"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/bottomfade"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#ffffff"
        android:fontFamily="AvenirNext-DemiBold"
        android:focusable="false" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:id="@+id/Camera"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/btn_add_bit_photo3x"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/add_bit_camera" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:id="@+id/video"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/add_bit_video"
        android:src="@drawable/btn_add_bit_video3x"
        android:layout_alignTop="@+id/Text"
        android:layout_toLeftOf="@+id/Camera"
        android:layout_toStartOf="@+id/Camera"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:id="@+id/Text"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/btn_add_bit_text3x"
        android:contentDescription="@string/add_bit_text"
        android:layout_marginRight="29dp"
        android:layout_below="@+id/Camera"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="29dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="61dp"
            android:id="@+id/Add_bit_Record"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/btn_add_bit_audio3x"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="61dp"
            android:id="@+id/Add_bit_Draw"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/btn_add_bit_drawing3x"
            android:layout_alignTop="@+id/Add_bit_Record"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:id="@+id/close"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_add_bit_close3x"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

</RelativeLayout>
